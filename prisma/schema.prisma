// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courier {
  id        Int      @id @default(autoincrement())
  name      String
  status    String   @default("active") // active, busy
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  address   String
  status    String   @default("created") // created, delivery, delivered, cancelled
  items     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  courierId Int?
  courier   Courier? @relation(fields: [courierId], references: [id])
}